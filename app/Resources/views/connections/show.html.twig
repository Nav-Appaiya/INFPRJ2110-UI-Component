{% extends 'base.html.twig' %}

{% block body %}
    <h1>Connections</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ connection.id }}</td>
            </tr>
            <tr>
                <th>Port</th>
                <td>{{ connection.port }}</td>
            </tr>
            <tr>
                <th>Value</th>
                <td>{{ connection.value }}</td>
            </tr>
            <tr>
                <th>Datetime</th>
                <td>{% if connection.dateTime %}{{ connection.dateTime|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Unitid</th>
                <td>{{ connection.unitId }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('connections_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('connections_edit', { 'id': connection.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
