<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Citygis Dashboard</title>

    <link href="{{ asset('bundles/app/css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/app/css/datepicker3.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/app/css/styles.css') }}" rel="stylesheet">

    <!--Icons-->
    <script src="{{ asset('bundles/app/js/lumino.glyphs.js') }}"></script>

    <!--[if lt IE 9]>
    <script src="{{ asset('bundles/app/js/html5shiv.min.js') }}"></script>
    <script src="{{ asset('bundles/app/js/respond.min.js') }}"></script>
    <![endif]-->
    {% block header_scripts %}{% endblock %}
</head>

<body>
<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#sidebar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#"><span>CityGIS </span>Admin  </a>
            <ul class="user-menu">
                <li class="dropdown pull-right">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><svg class="glyph stroked male-user"><use xlink:href="#stroked-male-user"></use></svg> User <span class="caret"></span></a>
                    <ul class="dropdown-menu" role="menu">
                        <li><a href="#"><svg class="glyph stroked male-user"><use xlink:href="#stroked-male-user"></use></svg> Profile</a></li>
                        <li><a href="#"><svg class="glyph stroked gear"><use xlink:href="#stroked-gear"></use></svg> Settings</a></li>
                        <li><a href="{{ path('login') }}"><svg class="glyph stroked cancel"><use xlink:href="#stroked-cancel"></use></svg> Logout</a></li>
                    </ul>
                </li>
            </ul>
        </div>

    </div><!-- /.container-fluid -->
</nav>

<div id="sidebar-collapse" class="col-sm-3 col-lg-2 sidebar">
    <form role="search" class="hidden">
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Search">
        </div>
    </form>
    <ul class="nav menu">
        <li class="{% if app.request.get('_route' ) == 'dashboard' %}active{% endif %}"><a href="{{ path('dashboard') }}">
                <svg class="glyph stroked dashboard-dial"><use xlink:href="#stroked-dashboard-dial"></use></svg> Dashboard</a></li>
        <li class="{% if app.request.get('_route' ) == 'connections_index' %}active{% endif %}"><a href="{{ path('connections_index') }}">
                <svg class="glyph stroked calendar"><use xlink:href="#stroked-calendar"></use></svg> Connections</a></li>
        <li class="{% if app.request.get('_route' ) == 'events_index' %}active{% endif %}"><a href="{{ path('events_index') }}">
                <svg class="glyph stroked line-graph"><use xlink:href="#stroked-line-graph"></use></svg> Events </a></li>
       <li class="{% if app.request.get('_route' ) == 'monitoring_index' %}active{% endif %}"><a href="{{ path('monitoring_index') }}">
               <svg class="glyph stroked table"><use xlink:href="#stroked-table"></use></svg> Monitoring</a></li>
        <li class="{% if app.request.get('_route' ) == 'positions_index' %}active{% endif %}"><a href="{{ path('positions_index') }}">
                <svg class="glyph stroked pencil"><use xlink:href="#stroked-pencil"></use></svg> Positions</a></li>
        <li role="presentation" class="divider"></li>
        <li class="{% if app.request.get('_route' ) == 'alerts_index' %}active{% endif %}"><a href="{{ path('alerts_index') }}">
        <svg class="glyph stroked app-window"><use xlink:href="#stroked-app-window"></use></svg> Alerts</a></li>

        <li class="{% if app.request.get('_route' ) == 'reports_index' %}active{% endif %}"><a href="{{ path('reports_index') }}">
                <svg class="glyph stroked line-graph"><use xlink:href="#stroked-line-graph"></use></svg> Reports </a></li>
        {#<li class=""><a href="login.html"><svg class="glyph stroked email"><use xlink:href="#stroked-email"></use></svg> Email </a></li>#}
        {#<li class=""><a href="login.html"><svg class="glyph stroked location-pin"><use xlink:href="#stroked-location-pin"></use></svg> Locations</a></li>#}
        {#<li class=""><a href="login.html"><svg class="glyph stroked male-user"><use xlink:href="#stroked-male-user"></use></svg> Configuration</a></li>#}
    </ul>

</div><!--/.sidebar-->

<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
    {% block body %}{% endblock %}
</div>	<!--/.main-->

<script src="{{ asset('bundles/app/js/jquery-1.11.1.min.js') }} "></script>
<script src="{{ asset('bundles/app/js/bootstrap.min.js') }} "></script>
<script src="{{ asset('bundles/app/js/chart.min.js') }} "></script>
<script src="{{ asset('bundles/app/js/chart-data.js') }} "></script>
<script src="{{ asset('bundles/app/js/easypiechart.js') }} "></script>
<script src="{{ asset('bundles/app/js/easypiechart-data.js') }} "></script>
<script src="{{ asset('bundles/app/js/bootstrap-datepicker.js') }} "></script>
{% block scripts %}{% endblock %}
</body>

</html>
